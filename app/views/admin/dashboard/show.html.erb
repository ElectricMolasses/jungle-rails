<h1>Admin Dashboard</h1>

<table class="table">
  <thead>
    <th>Type</th>
    <th>Count</th>
  </thead>
  <tbody>
    <tr>
      <td>Products</td>
      <td><%= @productCount %></td>
    </tr>
    <tr>
      <td>Categories</td>
      <td><%= @categoryCount %></td>
    </tr>
  </tbody>
</table>

<h3>Categories</h3>
<table class="table">
  <% @categories.each do |category| %>
    <%= render category %>
  <% end %>
</table>